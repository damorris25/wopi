# WOPI Server Configuration
WOPI_PORT=8080
WOPI_BASE_URL=http://localhost:8080
WOPI_ACCESS_TOKEN_SECRET=change-me-in-production

# S3-Compatible Storage Configuration
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_BUCKET=wopi-documents
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_USE_SSL=false
S3_FORCE_PATH_STYLE=true

# S3 Bearer Auth (optional, for S3 proxies like Virtru Secure Object Proxy)
# When enabled, the WOPI server authenticates to the S3 endpoint using
# OIDC bearer tokens (client credentials grant) instead of static credentials.
# S3_BEARER_AUTH_ENABLED=true
# S3_BEARER_TOKEN_URL=https://keycloak.opentdf.local:9443/auth/realms/opentdf/protocol/openid-connect/token
# S3_BEARER_CLIENT_ID=wopi-server
# S3_BEARER_CLIENT_SECRET=wopi-secret

# WOPI Client (editor) Configuration
# Supported: Collabora Online, LibreOffice Online, Microsoft 365, ONLYOFFICE
WOPI_CLIENT_URL=http://localhost:9980
# WOPI_CLIENT_EDITOR_PATH=/browser/dist/cool.html

# OpenTDF Platform endpoint (for attribute entitlements)
# PLATFORM_ENDPOINT=https://platform.opentdf.local:8443

# OIDC Authentication (optional, disabled by default)
# OIDC_ENABLED=true
# OIDC_ISSUER_URL=https://keycloak.opentdf.local:9443/auth/realms/opentdf
# OIDC_CLIENT_ID=wopi-server
# OIDC_CLIENT_SECRET=wopi-secret
# OIDC_REDIRECT_URL=https://wopi.opentdf.local:8443/auth/callback
# SESSION_SECRET=change-me-session-secret-32byts
